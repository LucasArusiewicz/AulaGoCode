<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucas.aula04_gocode" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastrarActivity"
            android:label="@string/title_activity_cadastrar" >
        </activity>
        <activity
            android:name=".ListarActivity"
            android:label="@string/title_activity_listar" >
        </activity>
        <activity
            android:name=".DetalhesActivity"
            android:label="@string/title_activity_detalhes" >
        </activity>
    </application>

</manifest>
