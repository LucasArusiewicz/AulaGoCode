<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.lucas.aula04_gocode.DetalhesActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            style="@style/botao"
            android:textSize="35dp"
            android:id="@+id/btnDetalhesEditar" />
        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="35dp"
            style="@style/tema"/>
        <TextView
            android:id="@+id/tvDetalhesNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:hint="Nome"
            style="@style/tema"/>
        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textSize="35dp"
            style="@style/tema"/>
        <TextView
            android:id="@+id/tvDetalhesTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:hint="Telefone"
            style="@style/tema"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idade: "
                android:textSize="35dp"
                style="@style/tema"/>
            <TextView
                android:id="@+id/tvDetalhesIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:hint="30"
                style="@style/tema"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serie: "
                android:textSize="35dp"
                style="@style/tema"/>
            <TextView
                android:id="@+id/tvDetalhesSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:hint="2"
                style="@style/tema"/>

        </LinearLayout>
        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade: "
            android:textSize="35dp"
            style="@style/tema"/>
        <TextView
            android:id="@+id/tvDetalhesCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:hint="Cidade"
            style="@style/tema"/>
        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atividades: "
            android:textSize="35dp"
            style="@style/tema"/>
        <TextView
            android:id="@+id/tvDetalhesAtividades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            style="@style/tema"/>

    </LinearLayout>


</ScrollView>
